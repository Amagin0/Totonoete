<%= stylesheet_link_tag 'questions', :media => "all" %>

<div class="card my-5">
  <div class="card-body">
    <div class="card-head">
      <h2><strong>お題</strong></h2>
    </div>
    <p>
      <div class="card-title card-flame title-box">
        <%= @question.q_title %>
      </div>
    </p>
    <p>
      <div class="card-text text-box">
        <%= @question.q_description %>
      </div>
    </p>
    <p>
      <div id="evaluate_stars">
      </div>
      <%= form_with model:[@question, @evaluation], local: true ,method: :post do |f| %>
        <div class="actions">
          <%= f.submit "評価する"%>
        </div>
      <% end %>
    </p>
    <p>
      <div class="card-footer">
        ととのえし者：<%= @question.user.name %>
      </div>
    </p>
  </div>
</div>

<script>
  $('#evaluate_stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    scoreName: 'movie[evaluation]' 
  });
</script>