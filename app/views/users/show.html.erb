<div class="offset-2">
<% @page_title = "ユーザー"%>

<h1 class="mt-5"><%= @user.name %>さんのユーザー情報</h1>
  <table class="table table-borderless col-sm-6">
    <tr>
      <th>ユーザー名：</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>登録日：</th>
      <td><%= current_user.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>投稿数：</th>
      <td>
        <%= @user.questions.count %>
      </td>
    </tr>
    <tr>
      <th></th>
      <% if current_user? %>
        <td><%= link_to '登録解除', unsubscribe_path, method: :delete, data: { confirm: '本当に登録解除しますか？' }, class: "btn btn-outline-danger rounded-pill" %></td>
      <% end %>
    </tr>
  </table>
</div>